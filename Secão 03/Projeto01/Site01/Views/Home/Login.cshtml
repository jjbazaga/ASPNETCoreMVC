@{
    Layout = "__Layout";
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
          integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
          crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <form method="post" action="/home/login">
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" name="email" value="" class="form-control" id="email" placeholder="Digite o seu e-mail">
                @Html.ValidationMessage("email")
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="text" name="senha" value="" class="form-control" id="senha" placeholder="Digite sua senha">
                @Html.ValidationMessage("senha")
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
        @ViewBag.Mensagem
    </div>
</body>
</html>